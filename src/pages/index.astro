---
// Component Imports
import Counter from '../components/Counter.jsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link href="http://fonts.cdnfonts.com/css/louis-george-cafe" rel="stylesheet">
		<style>
		@font-face {
			font-family: 'Louis George Café';
			font-style: normal;
			font-weight: 400;
			src: url('http://fonts.cdnfonts.com/css/louis-george-cafe'); /* IE9 Compat Modes */
			src: local(''),
					url('/fonts/Louis-George-Cafe.woff2') format('woff2'), /* Super Modern Browsers */
					url('/fonts/Louis-George-Cafe.woff') format('woff'), /* Modern Browsers */
					url('/fonts/Louis-George-Cafe.ttf') format('truetype'), /* Safari, Android, iOS */
					url('/fonts/Louis-George-Cafe-Bold.woff2') format('woff2'), /* Super Modern Browsers */
					url('/fonts/Louis-George-Cafe-Bold.woff') format('woff'), /* Modern Browsers */
					url('/fonts/Louis-George-Cafe-Bold.ttf') format('truetype'), /* Safari, Android, iOS */
		}
			* {
				box-sizing: border-box;
			}

			body {
				font-family: 'Louis George Café', sans-serif;
				background: rgb(204,220,217);
  			background: linear-gradient(90deg, rgba(204,220,217,1) 0%, rgba(204,204,153,1) 100%);
			}

			a {
				text-decoration: none;
			}

			a,
			a:visited {
				color: inherit;
			}

			#root {
				height: 100%;
				display: flex;
				flex-direction: column;
			}

		</style>
		<title>The Therpay Place</title>
	</head>
	<body>
		<Counter />
	</body>
</html>
